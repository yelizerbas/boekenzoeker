<main id="filter">
    <h1>Filteren</h1>
    <section>
        <form class="filtreren" id="filter" action="/formulier" , method="POST">
            <h3 id="errorFilteren"></h3>
            <input class="radio" type="radio" name="genre" value="Thriller" id="thriller" required>
            <label for="thriller"> Thriller</label>

            <input class="radio" type="radio" name="genre" value="Mystery" id="mystery">
            <label for="mystery"> Mystery</label>

            <input class="radio" type="radio" name="genre" value="Young Adult" id="young-adult">
            <label for="young-adult"> Young Adult</label>

            <input class="radio" type="radio" name="genre" value="Romance" id="romance">
            <label for="romance"> Romance</label>

            <button type="submit"> Filter</button>
        </form>
    </section>

    <section>
        {{#each data}}
        <section>
            <img src={{this.imgSrc}} alt="foto van boek" />
            <article>
                <h2>{{this.titel}}</h2>
                <h3>{{this.auteur}}</h3>
                <p>{{this.genre}}</p>
                <p>{{this.taal}}</p>
                <p>{{this.samenvatting}}</p>

                <form class="like" action="/like" method="POST">
                    <input class="ontzichtbaar" name="like" type="'hidden" value="{{this.titel}}" />
                    <input type="submit" value="LIKE">
                </form>
            </article>


        </section>
        {{/each}}
    </section>

</main>

{{>footer}}